{
  "name": "divergent-todos",
  "version": "1.8.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "functions"
  ],
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:desktop": "pnpm --filter desktop dev",
    "build:web": "pnpm --filter web build",
    "build:desktop": "pnpm build:web && pnpm --filter desktop build && pnpm --filter desktop package",
    "start:desktop": "pnpm --filter desktop start",
    "typecheck": "pnpm --filter web typecheck && pnpm --filter desktop typecheck",
    "deploy:rules": "pnpm --filter web deploy:rules",
    "deploy:functions": "pnpm --filter functions deploy:functions"
  },
  "packageManager": "pnpm@10.9.0"
}
