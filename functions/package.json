{
  "name": "@divergent-todos/functions",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "deploy:functions": "firebase deploy --project divergent-todos --only functions",
    "logs": "firebase functions:log",
    "generate-summary": "npm run build && node lib/scripts/generateWeekSummary.js"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.0.0",
    "google-auth-library": "^9.0.0",
    "openai": "^6.6.0",
    "resend": "^6.1.2",
    "stripe": "^19.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
