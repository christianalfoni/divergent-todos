{
  "name": "desktop",
  "description": "A secure Electron + React + Firebase todo application",
  "homepage": "https://github.com/christianalfoni/divergent-todos",
  "author": {
    "name": "Christian Alfoni",
    "email": "christianalfoni@gmail.com"
  },
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "start": "electron .",
    "package": "electron-builder --config electron-builder.config.js --publish never",
    "generate-icons": "electron-icon-builder --input=./divergent-todos-icon.png --output=./resources --flatten"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.0",
    "@types/node": "^24.6.2",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
