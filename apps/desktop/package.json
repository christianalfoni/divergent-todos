{
  "name": "desktop",
  "version": "1.1.0",
  "description": "A secure Electron + React + Firebase todo application",
  "homepage": "https://github.com/christianalfoni/divergent-todos",
  "author": {
    "name": "Christian Alfoni",
    "email": "christianalfoni@gmail.com"
  },
  "private": true,
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "start": "electron .",
    "package": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.divergent.todos",
    "productName": "Divergent Todos",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "!dist-electron/renderer/**/*"
    ],
    "extraResources": [
      {
        "from": "../web/dist",
        "to": "web",
        "filter": [
          "**/*"
        ]
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "christianalfoni",
      "repo": "divergent-todos"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-mac-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "artifactName": "${productName}-win-${arch}.${ext}"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "artifactName": "${productName}-linux-${arch}.${ext}"
    },
    "afterSign": "build/notarize.js"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.0",
    "@types/node": "^24.6.2",
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^35.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
